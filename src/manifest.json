{
  "manifest_version": 2,
  "name": "openrecスピーチ",
  "short_name": "openrecspeech",
  "description": "このエクステンションをインストールすると、https://www.openrec.tv/ のチャット欄を喋らせることができます。",
  "version": "0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.openrec.tv/live/*"],
      "js": ["openrec_voice.js"]
    }
  ]
}
